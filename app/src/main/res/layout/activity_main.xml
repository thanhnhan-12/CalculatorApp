<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:layout_marginTop="20dp"
    tools:context=".MainActivity">

    <!-- 1. Screen Calculator  -->
    <TextView
        android:id="@+id/calc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100in"
        android:paddingVertical="30dp"
        android:background="@drawable/rectangle"
        />

    <!-- 2. Screen Result -->
    <TextView
        android:id="@+id/result"
        android:hint="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="100in"
        android:paddingVertical="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle"
        />

    <!-- 3. Button -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        >

        <!-- 3.1. Row 1  -->
        <TableRow>
            <Button
                android:id="@+id/btnNumberOne"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnNumberTwo"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="2"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"

                />

            <Button
                android:id="@+id/btnNumberThree"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnSum"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="+"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />
        </TableRow>

        <!-- 3.2. Row 2  -->
        <TableRow>
            <Button
                android:id="@+id/btnNumberFour"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="4"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnNumberFive"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnNumberSix"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="6"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnSub"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="-"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />
        </TableRow>

        <!-- 3.3. Row 3  -->
        <TableRow>
            <Button
                android:id="@+id/btnNumberSeven"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="7"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnNumberEight"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="8"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnNumberNine"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="9"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="X"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />
        </TableRow>

        <!-- 3.4. Row 4  -->
        <TableRow>
            <Button
                android:id="@+id/btnNumberZero"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnNumberEqual"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:text="="
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />

            <Button
                android:id="@+id/btnNumberDivide"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:text="/"
                android:textSize="20dp"
                android:textStyle="bold"
                android:background="#000"
                android:layout_margin="5dp"
                />
        </TableRow>


    </TableLayout>




</LinearLayout>